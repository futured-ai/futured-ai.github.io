{% capture footer_contents %}
  <img src="{{ site.baseurl }}/assets/img/logos/Logo.svg" alt="Icon" class="small-image">
  <div class="badge-column">
    {% include badge.liquid
      img="pin"
      text="UOC, Computer Science Department" %}
    {% include badge.liquid
      img="calendar"
      text="2-3 October 2025" %}
  </div>
  <div class="footer-links">
    <a href="{{ site.url }}{{ site.terms }}">Terms</a>
    <a href="{{ site.url }}{{ site.privacy }}">Privacy</a>
    <a href="{{ site.url }}{{ site.codeofcontact }}">Code of Contact</a>
  </div>
  {{ site.footer_text }}
  {% if site.impressum_path %}
    <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
  {% endif %}
  {% if site.last_updated %}
    Last updated: {{ 'now' | date: '%B %d, %Y' }}.
  {% endif %}
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container">
      {{ footer_contents }}
    </div>
  </footer>
{% endif %}
