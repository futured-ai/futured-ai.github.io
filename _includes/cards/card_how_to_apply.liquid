<div class="card container">
  <h1 class="pffbold">{{ include.title }}</h1>
  <p class="subtitle">{{ include.text }}</p>
  <p>{{ include.sec_text }}</p>

  {% for feature in include.items %}
    <div style="display: flex; align-items: center; justify-content: center; width: 100%; margin-top: 20px;">
      <img src="{{ feature.icon | relative_url }}" alt="{{ feature.text }}" style="height: 32px;">
      <span style="padding-top: 5px; padding-left: 20px;">{{ feature.text }}</span>
    </div>
  {% endfor %}

  <p style="padding-top: 50px;">
    Are you ready to lead the education transformation?<br>
    <br>
    <div class="page-buttons">
      <a href="https://forms.gle/3fAafWCyVxya5jf6A" class="btn primary">Apply&nbsp;here</a>
    </div>
  </p>
</div>
