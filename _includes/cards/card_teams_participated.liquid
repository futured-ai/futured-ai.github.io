<div class="teams-card card">
  <h1 class="pffbold">{{ include.title }}</h1>
  <div class="teams-grid">
    {% for team in include.teams %}
      <div class="team-item">
        <div class="team-content">
          <h3 class="pffbold team-name">{{ team.name }}</h3>
          <a href="{{ team.presentation | relative_url }}" target="_blank" class="pffbold team-presentation-link">
            {{ include.description }}
          </a>
        </div>
        {% if team.presentation %}
          <a href="{{ team.presentation | relative_url }}" target="_blank" class="arrow-link">
            <span class="arrow">â†’</span>
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
