<div id="section_card1" class="container card">
  <h1 class="pffbold">{{ include.title }}</h1>
  {% if include.subtitle %}
    <p class="subtitle">{{ include.subtitle }}</p>
  {% endif %}
  <div class="feature-items">
    {% for feature in include.items %}
      <div class="feature-item">
        <img src="{{ feature.icon | relative_url }}" alt="{{ feature.title }}">
        <h3 class="pffbold">{{ feature.title }}</h3>
        <p>{{ feature.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>